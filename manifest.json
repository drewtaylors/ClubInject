{
    "name": "Injecta",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Injecting stuff",
    "homepage_url": "http://drewtaylor.io",
    "author": "Drew Taylor", 

    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "browser_action": {
      "default_title": "Inject!"
    },
    "content_scripts": [
        {
          "matches": ["http://test-website.com/*"], 
          "js": ["background.js"],
          "css": ["background.css"]
        }
    ],
    "permissions": [
      "https://*/*",
      "http://*/*",
      "tabs"
    ]
}
